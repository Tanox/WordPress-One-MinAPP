.first_card {
  z-index: 999;
  margin: 20px;
  margin-top: -55px;
  min-height: 100px;
  background-color: #FFFFFF;
  border-radius: 10px;
  box-shadow: 0px 5px 20px -5px #DDD;
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
}
.loading-title {
  font-size: 42px;
  font-weight: 200;
}
.container {
  background: linear-gradient(135deg, #FFFFFF 0%, #EEEEEE 100%);
}
.first_title_box {
  height: 50px;
  background-color: #FFF;
  border-bottom: 1px dashed #EEE;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0px 20px;
  border-radius: 10px 10px 0px 0px;
}
.first_title_box > text {
  font-size: 16px;
  font-weight: 300;
}

.first_content_box {
  padding: 10px 20px;
  background-color: #FFF;
  border-radius: 0px 0px 10px 10px;
}
.first_content_box > text {
  font-size: 14px;
  line-height: 20px;
  color: #333;
  font-weight: 200;
}

.first_author_box {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 10px 20px;
}
.first_author_box > text {
  font-size: 12px;
  color: #999;
  font-weight: 100;
}

.other_card {
  background-color: #FFF;
  margin: 20px;
  box-shadow: 0px 5px 20px -5px #DDD;
  /* border: 1px solid #DDD; */
  border-radius: 10px;
}
.other_title_box {
  padding: 0px 20px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px dashed #EEE;
}
.other_title_box > text {
  font-size: 16px;
  color: #333;
  font-weight: 300;
}
.other_content_box {
  padding: 10px 20px;
}
.other_content_box > text {
  font-size: 14px;
  color: #666;
  font-weight: 200;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.other_author_box {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 25rpx 45rpx;
}
.other_author_box > text {
  font-size: 28rpx;
  color: #666;
  font-weight: 100;
  text-shadow: 2rpx 2rpx 1rpx #ddd;
}
.more{
  display: flex;
  margin-bottom:80rpx;
}
.more-button {
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  font-size: 0.785714286rem;
  font-weight: normal;
  color: #959595;
  background-color: #FFF;
  background-repeat: repeat-x;
  border-radius: 40rpx;
}
.more-button::after {
  border: none;
}